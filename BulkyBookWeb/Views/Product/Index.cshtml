@using Microsoft.AspNetCore.Http

@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}


<div class accesskey="container p-3">
    <div class="row pt-4">
        <div class="col 6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>





        <div class="col 6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-folder-plus"></i>&nbsp; 
                Create New Product
            </a>
        </div>


        <form asp-controller="Product" asp-action="Index" method="get">
            <div class="form-group">
                <input type="text" name="search" placeholder="Search..." value="@ViewBag.CurrentFilter" class="form-control" />
                <br />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

    </div>
    <br />
    <br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Products Name
                </th>
                <th>
                    Products Details
                </th>

                <th>
                    Date&Time
                </th>

            </tr>
        </thead>
        <tbody>


            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">
                        @obj.Name
                    </td>

                    <td width="30%">
                        @obj.Description
                    </td>
                    
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i>&nbsp;Edit</a>


                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> &nbsp;Delete</a>
                        </div>

                    </td>




                </tr>
            }





        </tbody>


    </table>
</div>
